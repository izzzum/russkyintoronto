{{#if youtube}}
    {{#if loading}}
        {{loader-img show=loading}}
    {{else}}
        {{#if showIframe}}
        {{youtube-iframe video=video.youtube.id}}
        {{else}}
            <a class="img-resize" {{action 'toggleIframe'}}><img class="photo-responsive" src="{{video.youtube.thumbnail}}"></a>
        {{/if}}
    {{/if}}
{{else}}
<p>
    <span class="fa-stack fa-lg">
        <i class="fa fa-video-camera fa-stack-1x"></i>
        <i class="fa fa-ban fa-stack-2x text-danger"></i>
    </span>
    Видео "{{video.title}}" не доступно :/
</p>
{{/if}}
