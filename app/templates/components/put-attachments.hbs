{{#each attachments as |attachment|}}
    {{#if attachment.photo}}
        {{put-photo photo=attachment.photo}}
    {{/if}}
    {{#if attachment.posted_photo}}
        {{put-photo photo=attachment.posted_photo}}
    {{/if}}
    {{#if attachment.link}}
        {{put-link link=attachment.link}}
    {{/if}}
    {{#if attachment.video}}
        {{put-video video=attachment.video}}
    {{/if}}
    {{#if attachment.audio}}
        {{put-audio audio=attachment.audio}}
    {{/if}}
    {{#if attachment.sticker}}
        {{put-sticker sticker=attachment.sticker}}
    {{/if}}
{{/each}}