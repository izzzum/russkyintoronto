<div id="content" class="container">
{{#if model.posts}}
{{#each model.posts as |post|}}
    {{single-post post=post}}
{{/each}}
{{else if model.id}}
    {{single-post post=model}}
{{else}}
    <h2 class="text-center"><i class="fa fa-remove"></i> Error: 404</h2>
    <h3 class="text-center">There is no post with id:{{postId}}</h3>
{{/if}}
{{#link-to 'index'}}Back to posts{{/link-to}}
</div>