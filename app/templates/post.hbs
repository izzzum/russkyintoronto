<div class="container post-page">
{{#if model.posts}}
{{#each model.posts as |post|}}
    {{single-post post=post}}
{{/each}}
{{else if model.id}}
    {{single-post post=model}}
{{else}}
    <h2 class="text-center"><i class="fa fa-remove"></i> Error: 404</h2>
    <h3 class="text-center">Пост с id:{{postId}} не существует</h3>
{{/if}}
{{#link-to 'index' class="back-to-wall"}}<i class="fa fa-chevron-left"></i> Вернуться на стену{{/link-to}}
</div>